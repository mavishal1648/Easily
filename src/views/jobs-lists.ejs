<div style="background-color: rgb(194, 192, 192); height: 100vh;">
    <h1 id="jobsHere">Jobs Here!</h1>
    
    <div class="d-flex justify-content-between">
        
        <%jobs.forEach(job=>{%>
            <div class="BOX">
                <div>
                    <p style="font-size:20px;font-style: italic;">📈 Actively Hiring 📈</p>
                </div>
                <h2 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; margin-left: 1rem;"><%=job.company_name%></h2>
                <p>💻 Tech <b style="color: rgb(255, 0, 0);"><%=job.job_designation%></b></p>
                <p>📍 Location:<b><%=job.job_location%></b></p>
                <p>💰 Salary:<b><%=job.salary%></b></p>
                <p>🧑🏼‍💻 Skills: <b><%= job.skills_required %></b></p>
                <a href="/viewDetails/<%=job.id%>" style="margin-left: 1rem; color: rgb(20, 15, 41);">ViewDetails</a>
            </div>
        <%})%>
    </div>
    </div>